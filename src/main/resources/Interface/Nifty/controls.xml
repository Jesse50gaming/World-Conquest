<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls xmlns="http://nifty-gui.sourceforge.net/nifty-1.4/nifty-controls.xsd">

    <!-- DEFAULT BUTTON -->
    <controlDefinition style="nifty-button" name="button" controller="de.lessvoid.nifty.controls.button.ButtonControl"
                       inputMapping="de.lessvoid.nifty.input.mapping.MenuInputMapping">
            <panel style="#panel" focusable="true">
                <interact onClick="onClick()" onRelease="onRelease()"/>
                <text id="#text" style="#text" text="$label"/>
            </panel>
        </controlDefinition>
    </nifty-controls>

    <!-- DEFAULT LABEL -->
    <controlDefinition name="label" class="de.lessvoid.nifty.controls.textfield.LabelControl">
        <panel childLayout="center" align="center" valign="center">
            <text id="text" font="Interface/Fonts/Default.fnt"
                  text="#text"
                  align="center" valign="center"/>
        </panel>
    </controlDefinition>

    <!-- DEFAULT TEXTFIELD -->
    <controlDefinition style="nifty-textfield" name="textfield"
                       controller="de.lessvoid.nifty.controls.textfield.TextFieldControl"
                       inputMapping="de.lessvoid.nifty.controls.textfield.TextFieldInputMapping"
                       passwordChar="$passwordChar" maxLength="$maxLength">
            <panel style="#panel" focusable="true">
                <interact onClick="onClick()" onClickMouseMove="onClickMouseMove()"/>
                <panel id="#field" style="#field">
                    <text id="#text" style="#text" text="$text"/>
                </panel>
                <panel style="#cursor-panel">
                    <image id="#cursor" style="#cursor"/>
                </panel>
            </panel>
        </controlDefinition>
    </nifty-controls>

    <!-- DEFAULT CHECKBOX -->
    <controlDefinition name="checkbox" class="de.lessvoid.nifty.controls.checkbox.CheckBoxControl">
        <panel childLayout="horizontal" align="left" valign="center">
            <image filename="de/lessvoid/nifty/render/batch/nifty.png"
                   width="20px" height="20px"
                   visibleToMouse="true"/>
            <text id="text" font="Interface/Fonts/Default.fnt"
                  text="#text"
                  align="left" valign="center"/>
        </panel>
    </controlDefinition>

    <!-- DEFAULT DROPDOWN -->
    <controlDefinition name="dropdown" class="de.lessvoid.nifty.controls.dropdown.DropDownControl">
        <panel childLayout="vertical" align="left" valign="center"
               backgroundColor="#3D3232FF">
            <text id="text" font="Interface/Fonts/Default.fnt"
                  text="#text"
                  align="left" valign="center"/>
        </panel>
    </controlDefinition>

</nifty-controls>
